<Window x:Class="Gra2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra WPF" Height="600" Width="800"
        KeyDown="OknoGlowne_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Panel sterowania -->

        <Button Content="Wczytaj trase" Click="WczytajMape_Click" Margin="434,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="178" Height="50"/>
        <Label Name="EtykietaDrewna" Content="Drewno: 0" FontSize="16" Margin="0,0,618,50"/>
        <Image x:Name="obraz" Margin="405,0,293,9" Source="/e36_skin.png"/>
        <Image x:Name="obraz_Kopiuj" Source="/e30_skin.png" Margin="296,0,400,9"/>
 

        <!-- Kontener wyświetlający mapę -->
        <Grid Name="SiatkaMapy" Grid.Row="1" Background="LightGray"/>
        <RadioButton x:Name="radioe36" GroupName="skiny" Content="BMW e36" Margin="421,85,0,0" Checked="skin_checked" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioe30" GroupName="skiny" Content="BMW e30" Margin="313,85,0,0" Checked="skin_checked" HorizontalAlignment="Left" VerticalAlignment="Top" />


    </Grid>
</Window>

